{
    "name": "bitcoinwatcher",
    "displayName": "bitcoinwatcher",
    "description": "simple extension that displays the current bitcoin price in the statusbar",
    "version": "0.0.1",
    "publisher": "grayoverride",
    "engines": {
        "vscode": "^1.11.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "properties": {
                "bitcoinwatcher.relativeDifference": {
                    "type": "array",
                    "default": [],
                    "description": "display relative difference to current price, if more are defined the average will be calculated"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}